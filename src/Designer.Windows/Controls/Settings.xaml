<UserControl
    x:Class="Designer.Windows.Controls.Settings"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:local="clr-namespace:Designer.Windows.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <ToolBar Padding="8">
            <TextBlock VerticalAlignment="Center" Text="动作" />
            <Button Margin="8,0" Content="导出" />
        </ToolBar>
        <hc:PropertyGrid Grid.Row="1" SelectedObject="{Binding Model}" />
    </Grid>
</UserControl>
